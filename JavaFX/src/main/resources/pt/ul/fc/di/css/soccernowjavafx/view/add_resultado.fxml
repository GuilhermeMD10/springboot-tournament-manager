<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<VBox fx:controller="pt.ul.fc.di.css.soccernowjavafx.controller.AddResultadoController" prefHeight="300.0" prefWidth="230.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>

        <MenuBar>
            <menus>
            <Menu mnemonicParsing="false" text="Commands">
                <items>
                <MenuItem fx:id="btnBack" mnemonicParsing="false" onAction="#back" text="Back" />
                </items>
            </Menu>
            </menus>
        </MenuBar>
    <ComboBox fx:id="jogosComboBox" prefWidth="300" promptText="Escolher jogo"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Vencedor:"/>
        <ComboBox fx:id="vencedorComboBox" prefWidth="200"/>
    </HBox>

    <TitledPane text="Equipa Visitada" expanded="true">
        <VBox fx:id="jogadoresVisitadaBox" spacing="5"/>
    </TitledPane>

    <TitledPane text="Equipa Visitante" expanded="true">
        <VBox fx:id="jogadoresVisitanteBox" spacing="5"/>
    </TitledPane>

    <Button text="Submeter Resultado" onAction="#handleSubmeterResultado"/>
    </children>
</VBox>


