<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>



<VBox fx:controller="pt.ul.fc.di.css.soccernowjavafx.controller.CreateUtilizadorController" prefHeight="300.0" prefWidth="230.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <MenuBar>
            <menus>
            <Menu mnemonicParsing="false" text="Commands">
                <items>
                <MenuItem fx:id="btnBack" mnemonicParsing="false" onAction="#back" text="Back" />
                </items>
            </Menu>
            </menus>
        </MenuBar>
        <Label text="Registar Utilizador" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20" />
            </padding>
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
            </rowConstraints>


            <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="nomeField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="NIF:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="nifField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

            <Label text="Tipo de Utilizador:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <ComboBox fx:id="tipoUtilizadorCombo" GridPane.rowIndex="3" GridPane.columnIndex="1">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Utilizador" />
                        <String fx:value="Jogador" />
                        <String fx:value="Arbitro" />
                    </FXCollections>
                </items>
            </ComboBox>


            <!-- Campos especÃ­ficos do Jogador -->
        </GridPane>

        <Button text="Criar Utilizador" fx:id="criarButton" onAction="#handleCriarUtilizador" />
        <Label fx:id="mensagemLabel" textFill="red" />
    </children>
</VBox>
